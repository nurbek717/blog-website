<!-- Header -->
<header class="header">
    <div class="container">
        <div class="header-inner">
            <a href="/" class="logo">
                <i class="fas fa-feather-alt"></i>
                BlogSayt
            </a>

            <nav class="nav">
                <a href="/" class="nav-link">Bosh Sahifa</a>
                <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                    <% categories.slice(0, 3).forEach(function(cat) { %>
                        <a href="/category/<%= cat.slug %>" class="nav-link"><%= cat.name %></a>
                    <% }); %>
                <% } %>
                <a href="/about" class="nav-link">Biz Haqimizda</a>
                <a href="/contact" class="nav-link">Aloqa</a>
            </nav>

            <form action="/search" method="GET" class="search-form">
                <input type="text" name="q" class="search-input" placeholder="Qidirish...">
                <button type="submit" class="search-btn">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <button class="mobile-toggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>
</header>

