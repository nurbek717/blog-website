<!DOCTYPE html>
<html lang="uz">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <div class="admin-container">
        <%- include('../partials/sidebar') %>

        <main class="main-content">
            <%- include('../partials/topbar') %>

            <div class="page-content">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= error %>
                    </div>
                <% } %>

                <div class="card" style="max-width: 600px;">
                    <form action="/admin/categories<%= category ? '/' + category._id : '' %>" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="form-label">Kategoriya nomi *</label>
                            <input type="text" name="name" class="form-control" value="<%= category ? category.name : '' %>" required placeholder="Kategoriya nomini kiriting">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Tavsif</label>
                            <textarea name="description" class="form-control" style="min-height: 100px;" placeholder="Kategoriya tavsifi..."><%= category ? category.description || '' : '' %></textarea>
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                            <div class="form-group">
                                <label class="form-label">Tartib raqami</label>
                                <input type="number" name="order" class="form-control" value="<%= category ? category.order : 0 %>" min="0">
                            </div>

                            <div class="form-group" style="display: flex; align-items: flex-end;">
                                <label class="form-check">
                                    <input type="checkbox" name="isActive" <%= !category || category.isActive ? 'checked' : '' %>>
                                    <span>Faol</span>
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Rasm</label>
                            <% if (category && category.image) { %>
                                <div style="margin-bottom: 12px;">
                                    <img src="<%= category.image %>" alt="" style="width: 150px; height: 100px; object-fit: cover; border-radius: 10px;" onerror="this.style.display='none'">
                                </div>
                            <% } %>
                            <input type="file" name="image" class="form-control" accept="image/*">
                        </div>

                        <div style="display: flex; gap: 12px; margin-top: 32px;">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> <%= category ? 'Yangilash' : 'Yaratish' %>
                            </button>
                            <a href="/admin/categories" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Bekor
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
