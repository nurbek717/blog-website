<!DOCTYPE html>
<html lang="uz">
<head>
    <%- include('partials/head') %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Page Content Override */
        .page-content {
            overflow-x: hidden;
        }

        /* Analytics Header */
        .analytics-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 12px;
        }
        
        .analytics-header h2 {
            font-size: 18px;
            font-weight: 600;
            margin: 0;
        }
        
        .realtime-badge {
            display: flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #10b981, #059669);
            padding: 8px 16px;
            border-radius: 50px;
            font-size: 13px;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }
        
        .realtime-badge .dot {
            width: 8px;
            height: 8px;
            background: #fff;
            border-radius: 50%;
            animation: blink 1s infinite;
        }
        
        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }

        /* Visitor Stats Grid */
        .visitor-stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .visitor-stat-card {
            background: rgba(30, 27, 75, 0.6);
            border: 1px solid rgba(99, 102, 241, 0.2);
            border-radius: 12px;
            padding: 16px;
            position: relative;
            overflow: hidden;
        }
        
        .visitor-stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
        }
        
        .visitor-stat-card.today::before { background: linear-gradient(90deg, #6366f1, #818cf8); }
        .visitor-stat-card.weekly::before { background: linear-gradient(90deg, #0ea5e9, #38bdf8); }
        .visitor-stat-card.monthly::before { background: linear-gradient(90deg, #10b981, #34d399); }
        .visitor-stat-card.views::before { background: linear-gradient(90deg, #f59e0b, #fbbf24); }
        
        .visitor-stat-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: var(--gray);
            margin-bottom: 6px;
        }
        
        .visitor-stat-value {
            font-size: 26px;
            font-weight: 700;
            color: #fff;
            line-height: 1;
        }
        
        .visitor-stat-sub {
            font-size: 12px;
            color: var(--gray);
            margin-top: 6px;
        }

        /* Main Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 16px;
            margin-bottom: 24px;
        }

        .stat-card {
            padding: 16px;
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            font-size: 20px;
        }

        .stat-info h3 {
            font-size: 24px;
        }

        .stat-info p {
            font-size: 13px;
        }

        /* Charts Layout */
        .charts-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 24px;
        }

        .chart-card {
            background: rgba(30, 27, 75, 0.6);
            border: 1px solid rgba(99, 102, 241, 0.2);
            border-radius: 12px;
            padding: 20px;
        }
        
        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }
        
        .chart-title {
            font-size: 14px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .chart-title i {
            color: var(--primary);
        }
        
        .chart-container {
            position: relative;
            height: 220px;
        }

        /* Small Charts Grid */
        .small-charts-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 24px;
        }
        
        .small-chart-card {
            background: rgba(30, 27, 75, 0.6);
            border: 1px solid rgba(99, 102, 241, 0.2);
            border-radius: 12px;
            padding: 16px;
        }
        
        .small-chart-title {
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .small-chart-container {
            height: 160px;
            position: relative;
        }

        /* Top Pages List */
        .top-pages-list {
            max-height: 220px;
            overflow-y: auto;
        }

        .top-pages-list::-webkit-scrollbar {
            width: 4px;
        }

        .top-pages-list::-webkit-scrollbar-track {
            background: rgba(99, 102, 241, 0.1);
            border-radius: 2px;
        }

        .top-pages-list::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 2px;
        }
        
        .top-page-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid rgba(99, 102, 241, 0.1);
        }
        
        .top-page-item:last-child {
            border-bottom: none;
        }
        
        .top-page-name {
            font-size: 12px;
            color: #e2e8f0;
            width: 120px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            flex-shrink: 0;
        }
        
        .top-page-count {
            font-weight: 600;
            color: var(--primary);
            font-size: 13px;
            width: 40px;
            text-align: right;
            flex-shrink: 0;
        }
        
        .progress-bar-container {
            flex: 1;
            margin: 0 12px;
            height: 5px;
            background: rgba(99, 102, 241, 0.1);
            border-radius: 3px;
            overflow: hidden;
        }
        
        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border-radius: 3px;
        }

        /* Bottom Grid */
        .bottom-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 24px;
        }

        .card {
            padding: 20px;
        }

        .card-header {
            margin-bottom: 16px;
            padding-bottom: 12px;
        }

        .card-title {
            font-size: 14px;
        }

        /* Browser Tags */
        .browser-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .browser-tag {
            background: rgba(99, 102, 241, 0.1);
            padding: 8px 14px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
        }

        .browser-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }

        .browser-count {
            color: var(--primary);
            font-weight: 600;
        }

        /* Quick Actions */
        .quick-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .quick-actions .btn {
            padding: 10px 16px;
            font-size: 13px;
        }

        /* Recent Blogs Table */
        .recent-blogs-card {
            margin-bottom: 20px;
        }

        .table-container {
            overflow-x: auto;
        }

        .table-container::-webkit-scrollbar {
            height: 4px;
        }

        .table-container::-webkit-scrollbar-track {
            background: rgba(99, 102, 241, 0.1);
        }

        .table-container::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 2px;
        }

        table th, table td {
            padding: 12px;
            font-size: 13px;
        }

        /* Responsive */
        @media (max-width: 1400px) {
            .visitor-stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 1200px) {
            .charts-row {
                grid-template-columns: 1fr;
            }
            .small-charts-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .bottom-grid {
                grid-template-columns: 1fr;
            }
        }
        
        @media (max-width: 768px) {
            .visitor-stats-grid {
                grid-template-columns: 1fr 1fr;
            }
            .stats-grid {
                grid-template-columns: 1fr 1fr;
            }
            .small-charts-grid {
                grid-template-columns: 1fr;
            }
            .analytics-header {
                flex-direction: column;
                align-items: flex-start;
            }
        }

        @media (max-width: 480px) {
            .visitor-stats-grid {
                grid-template-columns: 1fr;
            }
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <%- include('partials/sidebar') %>

        <main class="main-content">
            <%- include('partials/topbar') %>

            <div class="page-content">
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <%= success %>
                    </div>
                <% } %>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= error %>
                    </div>
                <% } %>

                <!-- Analytics Header -->
                <div class="analytics-header">
                    <h2>
                        <i class="fas fa-chart-line" style="color: var(--primary); margin-right: 8px;"></i>
                        Sayt Statistikasi
                    </h2>
                    <div class="realtime-badge">
                        <span class="dot"></span>
                        <span><%= visitorStats.realtime %> faol</span>
                    </div>
                </div>

                <!-- Visitor Stats Cards -->
                <div class="visitor-stats-grid">
                    <div class="visitor-stat-card today">
                        <div class="visitor-stat-label">Bugungi</div>
                        <div class="visitor-stat-value"><%= visitorStats.today.toLocaleString() %></div>
                        <div class="visitor-stat-sub"><%= visitorStats.uniqueToday %> noyob</div>
                    </div>
                    <div class="visitor-stat-card weekly">
                        <div class="visitor-stat-label">Haftalik</div>
                        <div class="visitor-stat-value"><%= visitorStats.weekly.toLocaleString() %></div>
                        <div class="visitor-stat-sub"><%= visitorStats.uniqueWeekly %> noyob</div>
                    </div>
                    <div class="visitor-stat-card monthly">
                        <div class="visitor-stat-label">Oylik</div>
                        <div class="visitor-stat-value"><%= visitorStats.monthly.toLocaleString() %></div>
                        <div class="visitor-stat-sub"><%= visitorStats.uniqueMonthly %> noyob</div>
                    </div>
                    <div class="visitor-stat-card views">
                        <div class="visitor-stat-label">Jami ko'rishlar</div>
                        <div class="visitor-stat-value"><%= stats.totalViews.toLocaleString() %></div>
                        <div class="visitor-stat-sub">Barcha bloglar</div>
                    </div>
                </div>

                <!-- Main Stats Grid -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon blogs"><i class="fas fa-newspaper"></i></div>
                        <div class="stat-info">
                            <h3><%= stats.blogCount %></h3>
                            <p>Bloglar</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon categories"><i class="fas fa-folder"></i></div>
                        <div class="stat-info">
                            <h3><%= stats.categoryCount %></h3>
                            <p>Kategoriyalar</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon comments"><i class="fas fa-comments"></i></div>
                        <div class="stat-info">
                            <h3><%= stats.commentCount %></h3>
                            <p>Izohlar</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon pending"><i class="fas fa-clock"></i></div>
                        <div class="stat-info">
                            <h3><%= stats.pendingComments %></h3>
                            <p>Kutilmoqda</p>
                        </div>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="charts-row">
                    <div class="chart-card">
                        <div class="chart-header">
                            <div class="chart-title">
                                <i class="fas fa-chart-area"></i>
                                30 kunlik tashriflar
                            </div>
                        </div>
                        <div class="chart-container">
                            <canvas id="dailyChart"></canvas>
                        </div>
                    </div>
                    
                    <div class="chart-card">
                        <div class="chart-header">
                            <div class="chart-title">
                                <i class="fas fa-star"></i>
                                Top sahifalar
                            </div>
                        </div>
                        <div class="top-pages-list">
                            <% const maxPageViews = chartData.topPages.length > 0 ? chartData.topPages[0].count : 1; %>
                            <% chartData.topPages.slice(0, 8).forEach(function(page) { %>
                                <div class="top-page-item">
                                    <span class="top-page-name" title="<%= page._id %>">
                                        <%= page._id === '/' ? 'Bosh sahifa' : page._id %>
                                    </span>
                                    <div class="progress-bar-container">
                                        <div class="progress-bar" style="width: <%= (page.count / maxPageViews * 100) %>%"></div>
                                    </div>
                                    <span class="top-page-count"><%= page.count %></span>
                                </div>
                            <% }); %>
                            <% if (chartData.topPages.length === 0) { %>
                                <p style="color: var(--gray); text-align: center; padding: 40px 0;">Ma'lumot yo'q</p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Small Charts -->
                <div class="small-charts-grid">
                    <div class="small-chart-card">
                        <div class="small-chart-title">
                            <i class="fas fa-clock" style="color: var(--secondary);"></i>
                            Soatlik
                        </div>
                        <div class="small-chart-container">
                            <canvas id="hourlyChart"></canvas>
                        </div>
                    </div>
                    <div class="small-chart-card">
                        <div class="small-chart-title">
                            <i class="fas fa-calendar-week" style="color: var(--success);"></i>
                            Hafta kunlari
                        </div>
                        <div class="small-chart-container">
                            <canvas id="weekdayChart"></canvas>
                        </div>
                    </div>
                    <div class="small-chart-card">
                        <div class="small-chart-title">
                            <i class="fas fa-mobile-alt" style="color: var(--accent);"></i>
                            Qurilmalar
                        </div>
                        <div class="small-chart-container">
                            <canvas id="deviceChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Bottom Grid -->
                <div class="bottom-grid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fab fa-chrome" style="color: var(--primary); margin-right: 6px;"></i>
                                Brauzerlar
                            </h3>
                        </div>
                        <div class="browser-tags">
                            <% const browserColors = { 'Chrome': '#4285F4', 'Firefox': '#FF7139', 'Safari': '#000', 'Edge': '#0078D7', 'Opera': '#FF1B2D', 'Other': '#64748b' }; %>
                            <% chartData.browsers.forEach(function(browser) { %>
                                <div class="browser-tag">
                                    <div class="browser-dot" style="background: <%= browserColors[browser._id] || '#64748b' %>;"></div>
                                    <span><%= browser._id || 'Noma\'lum' %></span>
                                    <span class="browser-count"><%= browser.count %></span>
                                </div>
                            <% }); %>
                            <% if (chartData.browsers.length === 0) { %>
                                <p style="color: var(--gray);">Ma'lumot yo'q</p>
                            <% } %>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Tezkor harakatlar</h3>
                        </div>
                        <div class="quick-actions">
                            <a href="/admin/blogs/create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Yangi Blog
                            </a>
                            <a href="/admin/categories/create" class="btn btn-secondary">
                                <i class="fas fa-folder-plus"></i> Kategoriya
                            </a>
                            <a href="/admin/comments?status=pending" class="btn btn-warning">
                                <i class="fas fa-eye"></i> Izohlar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Recent Blogs -->
                <div class="card recent-blogs-card">
                    <div class="card-header">
                        <h3 class="card-title">So'nggi Bloglar</h3>
                        <a href="/admin/blogs" class="btn btn-sm btn-secondary">Barchasi</a>
                    </div>
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th>Sarlavha</th>
                                    <th>Kategoriya</th>
                                    <th>Ko'rishlar</th>
                                    <th>Holat</th>
                                    <th>Sana</th>
                                    <th>Amallar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentBlogs.forEach(function(blog) { %>
                                    <tr>
                                        <td><strong><%= blog.title.substring(0, 35) %><%= blog.title.length > 35 ? '...' : '' %></strong></td>
                                        <td><%= blog.category ? blog.category.name : '-' %></td>
                                        <td>
                                            <span style="color: var(--primary); font-weight: 600;">
                                                <i class="fas fa-eye" style="font-size: 11px;"></i>
                                                <%= blog.views || 0 %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge <%= blog.status === 'published' ? 'badge-success' : blog.status === 'draft' ? 'badge-warning' : 'badge-danger' %>">
                                                <%= blog.status === 'published' ? 'Nashr' : blog.status === 'draft' ? 'Qoralama' : 'Arxiv' %>
                                            </span>
                                        </td>
                                        <td><%= new Date(blog.createdAt).toLocaleDateString('uz-UZ') %></td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/admin/blogs/<%= blog._id %>/edit" class="action-btn edit" title="Tahrirlash">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/blog/<%= blog.slug %>" target="_blank" class="action-btn view" title="Ko'rish">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                                <% if (recentBlogs.length === 0) { %>
                                    <tr><td colspan="6" style="text-align: center; color: #64748b;">Bloglar topilmadi</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        Chart.defaults.color = '#94a3b8';
        Chart.defaults.borderColor = 'rgba(99, 102, 241, 0.1)';
        Chart.defaults.font.family = 'Outfit';
        
        // Daily Chart
        const dailyCtx = document.getElementById('dailyChart').getContext('2d');
        const dailyGradient = dailyCtx.createLinearGradient(0, 0, 0, 220);
        dailyGradient.addColorStop(0, 'rgba(99, 102, 241, 0.3)');
        dailyGradient.addColorStop(1, 'rgba(99, 102, 241, 0)');
        
        new Chart(dailyCtx, {
            type: 'line',
            data: {
                labels: <%- JSON.stringify(chartData.daily.labels) %>,
                datasets: [{
                    label: 'Tashriflar',
                    data: <%- JSON.stringify(chartData.daily.views) %>,
                    borderColor: '#6366f1',
                    backgroundColor: dailyGradient,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 0,
                    pointHoverRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { display: false }, ticks: { maxTicksLimit: 10, font: { size: 10 } } },
                    y: { beginAtZero: true, grid: { color: 'rgba(99, 102, 241, 0.1)' }, ticks: { font: { size: 10 } } }
                }
            }
        });
        
        // Hourly Chart
        new Chart(document.getElementById('hourlyChart'), {
            type: 'bar',
            data: {
                labels: <%- JSON.stringify(chartData.hourly.labels) %>,
                datasets: [{
                    data: <%- JSON.stringify(chartData.hourly.data) %>,
                    backgroundColor: 'rgba(14, 165, 233, 0.6)',
                    borderRadius: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { display: false }, ticks: { maxTicksLimit: 8, font: { size: 9 } } },
                    y: { beginAtZero: true, grid: { color: 'rgba(99, 102, 241, 0.1)' }, ticks: { font: { size: 9 } } }
                }
            }
        });
        
        // Weekday Chart
        new Chart(document.getElementById('weekdayChart'), {
            type: 'polarArea',
            data: {
                labels: <%- JSON.stringify(chartData.weekday.labels) %>,
                datasets: [{
                    data: <%- JSON.stringify(chartData.weekday.data) %>,
                    backgroundColor: ['rgba(239,68,68,0.6)','rgba(99,102,241,0.6)','rgba(14,165,233,0.6)','rgba(16,185,129,0.6)','rgba(245,158,11,0.6)','rgba(236,72,153,0.6)','rgba(168,85,247,0.6)'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { r: { ticks: { display: false }, grid: { color: 'rgba(99, 102, 241, 0.1)' } } }
            }
        });
        
        // Device Chart
        const deviceData = <%- JSON.stringify(chartData.devices) %>;
        new Chart(document.getElementById('deviceChart'), {
            type: 'doughnut',
            data: {
                labels: deviceData.map(d => ({ desktop: 'Kompyuter', mobile: 'Telefon', tablet: 'Planshet', unknown: 'Boshqa' }[d._id] || d._id)),
                datasets: [{
                    data: deviceData.map(d => d.count),
                    backgroundColor: ['rgba(99,102,241,0.8)','rgba(14,165,233,0.8)','rgba(16,185,129,0.8)','rgba(100,116,139,0.8)'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '60%',
                plugins: { legend: { position: 'bottom', labels: { usePointStyle: true, padding: 10, font: { size: 10 } } } }
            }
        });

        // Auto-refresh realtime
        setInterval(async () => {
            try {
                const res = await fetch('/admin/api/realtime-visitors');
                if (res.ok) {
                    const data = await res.json();
                    document.querySelector('.realtime-badge span:last-child').textContent = data.count + ' faol';
                }
            } catch (e) {}
        }, 30000);
    </script>
</body>
</html>
